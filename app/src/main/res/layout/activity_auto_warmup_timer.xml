<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="com.climbz.strongcode.AutoWarmupTimer"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fullscreen_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:keepScreenOn="true"
        android:text="@string/dummy_content"
        android:textColor="@color/black_overlay"
        android:textSize="50sp"
        android:textStyle="bold" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/timerButton"
        android:layout_below="@id/fullscreen_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:src="@drawable/play"
        app:backgroundTint="@color/lightblue"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/formImg"
        android:layout_below="@+id/timerButton"
        android:layout_alignParentStart="true"
        android:src="@drawable/plank"/>


</RelativeLayout>
